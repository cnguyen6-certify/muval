<!-- These schematron rules are written for the "IHE Laboratory Technical Framework Volume3 (LAB TF-3) August 08, 2008". 
2.3.5.6 Specimen Received 1.3.6.1.4.1.19376.1.3.1.3.
 -->
 <pattern id='p-1.3.6.1.4.1.19376.1.3.1.3-errors'>

 <rule context='*[cda:templateId/@root="1.3.6.1.4.1.19376.1.3.1.3"]'>

   <!-- Verify that templateId is used on the appropriate type of object -->
    <assert test='parent::cda:entryRelationship and
                 self::cda:act'>
       Error: The templateId  (1.3.6.1.4.1.19376.1.3.1.3) is a child element of entryRelationship/act and identifies a Specimen Received.
    </assert> 
     
    <assert test='parent::cda:entryRelationship[@typeCode="COMP"]'>
     Error: In Specimen Received (1.3.6.1.4.1.19376.1.3.1.3) the entry/act/entryRelationship shall have a typeCode of "COMP".</assert> 

    <assert test='@classCode="ACT"'>
        Error: In Specimen Received (1.3.6.1.4.1.19376.1.3.1.3) the entryRelationship/act/@classCode shall be equal to "ACT".
     </assert>
          
    <assert test='@moodCode="EVN"'>
        Error: In Specimen Received (1.3.6.1.4.1.19376.1.3.1.3) the entryRelationship/act/@moodCode shall be equal to "EVN".
    </assert>
             
    <assert test='cda:code[@code="SPRECEIVE"]'>
        Error: In Specimen Received (1.3.6.1.4.1.19376.1.3.1.3) the act/code/@code shall be "SPRECEIVE".
    </assert>   
    
    <assert test='cda:code[@codeSystem="1.3.5.1.4.1.19376.1.5.3.2"]'>
        Error: In Specimen Received (1.3.6.1.4.1.19376.1.3.1.3) the act/code/@codeSystem shall be "1.3.5.1.4.1.19376.1.5.3.2".
    </assert> 
       
 </rule>
</pattern>

